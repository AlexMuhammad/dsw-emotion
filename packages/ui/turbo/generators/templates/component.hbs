"use client"

import React from 'react'
import { useTheme } from '@emotion/react'
import styled from '@emotion/styled'

import { type ThemeType, defaultTheme, isEmptyObj } from '../../../utils'

interface {{ pascalCase name }}Props {
  /**
  * React.children
  **/
  children?: React.ReactNode;

  /**
  * Component styles
  **/
  style?: React.CSSProperties;

  /**
  * Component className
  **/
  className?: string;
}

export const {{ pascalCase name }} = ({ children, style, className }: {{pascalCase name}}Props) => {
  let theme = useTheme() as ThemeType

  /**
  * Check if the component not wrapped with ThemeProvider
  * If yes then use the defaultTheme
  */
  if(isEmptyObj(theme)){
    theme = defaultTheme
  }

  return (
    <{{ pascalCase name }}Styled className={className} style={style}>
      <h1>{{ name }}</h1>
      {children}
    </{{ pascalCase name }}Styled>
  );
};

const {{ pascalCase name }}Styled = styled.div({},() => ({}))
